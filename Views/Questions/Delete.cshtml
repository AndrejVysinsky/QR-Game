@model QuizWebApp.Models.Question

@{
    ViewData["Title"] = "Vymazať";
}

<h3>Naozaj chcete vymazať túto otázku ?</h3>

<hr />

<div class="row">
    <div class="col-md-8">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            @Html.TextBoxFor(a => a.Name, new { @class = "form-control", @disabled = "disabled" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(a => a.Text, new { id = "mytextarea" })
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Späť na zoznam</a>
        </form>
    </div>
</div>

<script>
    tinymce.init({
        selector: '#mytextarea',
        readonly : 1
    });
</script>