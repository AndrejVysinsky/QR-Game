@model QuizWebApp.ViewModels.PaginationBase

<div class="btn-toolbar justify-content-between">
    <div class="btn-group">
        <span class="my-auto">Zobraz&nbsp;</span>
        <select id="pageLength">
            <option value="10" selected="@(Model.PageLength == 10)">10</option>
            <option value="25" selected="@(Model.PageLength == 25)">25</option>
            <option value="50" selected="@(Model.PageLength == 50)">50</option>
            <option value="100" selected="@(Model.PageLength == 100)">100</option>
        </select>
        <span class="my-auto">&nbsp;záznamov na stranu</span>
    </div>
    <div class="input-group">
        <input id="searchInput" type="text" class="form-control" placeholder="Hľadať.." value="@Model.SearchInput">
        <i id="clearInput" class="fas fa-times"></i>
    </div>
</div>